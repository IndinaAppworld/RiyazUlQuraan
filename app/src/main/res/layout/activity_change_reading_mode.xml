<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:background="@android:color/transparent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/roundedbtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.fonts.CipherBold
            android:layout_width="fill_parent"
            android:text="Change Reading Mode" android:paddingTop="10dp" android:paddingBottom="10dp"
            android:gravity="center"
            android:textSize="@dimen/hedertextsize"
            android:textColor="@color/primary"
            android:layout_height="wrap_content" />


        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:orientation="vertical"
            >


            <LinearLayout android:layout_width="fill_parent"
                android:gravity="center_vertical"
                android:layout_height="wrap_content" android:orientation="vertical" >



                <com.fonts.HelviticaNormal
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" android:textColor="@color/primary"
                    android:text="Please select the reading mode depending upon your device resolution or reading convenience" android:textStyle="bold" android:id="@+id/pgnotext"
                    android:textSize="@dimen/hedertextsize" android:layout_marginLeft="10dip"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dip"
                    />
                <LinearLayout android:layout_width="fill_parent"

                    android:layout_height="wrap_content" android:orientation="vertical" >

                    <RadioGroup
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >
                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/r1"
                            android:textColor="@color/primary"
                            android:text="Page Effect"
                            android:textSize="@dimen/hedertextsize"
                            />


                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/r2"
                            android:textColor="@color/primary"
                            android:textSize="@dimen/hedertextsize"
                            android:text="Gallery Effect"
                            />

                    </RadioGroup>

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>



        <com.fonts.CipherBold
            android:layout_width="fill_parent"
            android:text="Submit" android:paddingTop="10dp" android:paddingBottom="10dp"
            android:gravity="center"
            android:id="@+id/submit"
            android:textSize="@dimen/hedertextsize"
            android:textColor="@color/primary"
            android:layout_height="wrap_content" />

    </LinearLayout>


</RelativeLayout>
