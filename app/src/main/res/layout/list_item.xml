<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
     android:padding="0dip" 

>
<RelativeLayout
   
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    
 android:paddingLeft="5dip" 
android:paddingRight="5dip"
android:paddingTop="0dip"
android:paddingBottom="0dip"
>
    <ImageView
        android:id="@+id/contact_photo"
        android:visibility="gone"
        android:layout_width="wrap_content" android:layout_centerVertical="true"
        android:layout_height="wrap_content"     
         />
    
    
        
  <ImageView
      android:visibility="gone"
        android:id="@+id/arrow"
        android:layout_width="wrap_content" android:layout_alignParentRight="true"
        android:layout_height="wrap_content"      android:layout_centerVertical="true"
      />
    
  
  
  <com.fonts.CipherNormal
        android:id="@+id/name_english"
        android:layout_width="wrap_content"
        
        android:layout_height="wrap_content"
    
    android:layout_centerVertical="true"
        android:paddingBottom="0dip"
        android:textSize="@dimen/menuitemsize"   
        android:layout_marginLeft="5dip"
        android:layout_marginRight="5dip"   
        android:layout_marginTop="0dip"
        android:text="Muharamul H"
        android:textColor="#ffffff" />

 <LinearLayout 
       android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
     android:orientation="horizontal"
     android:layout_centerVertical="true"
     >
     
     <com.fonts.QuraanicNormal
        android:id="@+id/name_arabic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       
        android:paddingBottom="0dip"
        android:textSize="@dimen/menuitemsize_arabic"   
        android:layout_marginLeft="5dip"
        android:layout_marginRight="5dip"   
        android:layout_marginTop="0dip"
        android:text="Muharamul H"
         android:textColor="#ffffff" />
    
    <ImageView
        android:id="@+id/fav"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"

         />

  
     
     
 </LinearLayout> 
  
    
  
    </RelativeLayout>
  

</LinearLayout>
