<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.app.riyazulquran"
    android:installLocation="auto"
    >

    <uses-permission android:name="ANDROID.PERMISSION.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/icon"
        android:largeHeap="true"

        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:exported="true"
            android:name=".SplashScreen"
            android:label="@string/title_activity_splash_screen"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SubMenuActivity"
            android:label="@string/title_activity_sub_menu"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".GotoPageActivity"
            android:label="@string/title_activity_goto_page"
            android:theme="@style/Theme.Transparent" >
        </activity>
        <activity
            android:name=".CurlActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_goto_page" >
        </activity>
        <activity
            android:name=".AboutDeveloper"
            android:label="@string/title_activity_about_developer"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Transparent" >
        </activity>
        <activity
            android:name=".HelpActivity"
            android:label="@string/title_activity_help"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Transparent" >
        </activity>
        <activity
            android:name=".ChangeReadingMode"
            android:label="@string/title_activity_change_reading_mode"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Transparent" >
        </activity>
        <activity
            android:name=".BookMarkActivity"
            android:label="@string/title_activity_book_mark"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:screenOrientation="portrait"
            android:name=".VisitWebsite"
            android:label="@string/title_activity_visit_website"
            android:theme="@style/Theme.Transparent"
            >
        </activity>
    </application>

</manifest>
